<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
    <%- include('partials/head') %>
        <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
</head>

<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white font-sans transition-all">
    <%- include('partials/headers') %>

        <main class="max-w-6xl mx-auto px-4 pt-24 pb-32 space-y-32">

            <!-- HERO SECTION -->
            <section id="hero" class="text-center space-y-6" data-aos="fade-up">
                <h1
                    class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-blue-500">
                    Hi, I'm Mahen
                </h1>
                <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-2xl mx-auto">
                    Full-Stack Developer | JavaScript | Express | Tailwind | EJS
                </p>
                <a href="#projects"
                    class="inline-block mt-6 px-8 py-3 bg-indigo-600 text-white rounded-full shadow-lg hover:bg-indigo-700 transition hover:scale-105">
                    View Projects
                </a>
            </section>

            <!-- PROJECTS SECTION -->
            <section id="projects" class="space-y-10" data-aos="fade-up" data-aos-delay="100">
                <h2 class="text-3xl font-bold text-center">Featured Projects</h2>
                <div class="grid md:grid-cols-2 gap-8">
                    <% for (let i=0; i < 4; i++) { %>
                        <div
                            class="bg-white dark:bg-white/5 rounded-2xl shadow-md p-6 transition hover:-translate-y-1 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                            <h3 class="text-xl font-semibold text-indigo-600 dark:text-indigo-400">Project Title <%= i +
                                    1 %>
                            </h3>
                            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                                Description for project <%= i + 1 %>. Built with Express.js and deployed on Vercel.
                            </p>
                            <a href="#"
                                class="text-indigo-500 dark:text-indigo-300 text-sm mt-2 inline-block hover:underline">Visit
                                Project</a>
                        </div>
                        <% } %>
                </div>
            </section>

            <!-- SKILLS SECTION -->
            <section id="skills" class="text-center" data-aos="fade-up" data-aos-delay="150">
                <h2 class="text-3xl font-bold mb-4">Skills</h2>
                <div class="flex flex-wrap justify-center gap-3">
                    <% const skills=['JavaScript', 'Node.js' , 'Express' , 'Tailwind CSS' , 'MongoDB' , 'EJS' ]; %>
                        <% skills.forEach(skill=> { %>
                            <span
                                class="bg-indigo-100 text-indigo-700 dark:bg-indigo-700 dark:text-white px-4 py-2 rounded-full text-sm font-medium">
                                <%= skill %>
                            </span>
                            <% }) %>
                </div>
            </section>

            <!-- SERVICES SECTION -->
            <section id="services" data-aos="fade-up" data-aos-delay="200">
                <h2 class="text-3xl font-bold text-center mb-6">Services</h2>
                <div class="grid md:grid-cols-3 gap-6">
                    <% const services=['Web Development', 'Backend API' , 'UI/UX Design' ]; %>
                        <% services.forEach(service=> { %>
                            <div
                                class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow border border-gray-200 dark:border-gray-700">
                                <h3 class="text-xl font-semibold text-indigo-600 dark:text-indigo-400 mb-2">
                                    <%= service %>
                                </h3>
                                <p class="text-sm text-gray-600 dark:text-gray-400">
                                    High quality <%= service %> with modern technologies and best practices.
                                </p>
                            </div>
                            <% }) %>
                </div>
            </section>

            <!-- TESTIMONIALS SECTION -->
            <section id="testimonials" class="space-y-6" data-aos="fade-up" data-aos-delay="250">
                <h2 class="text-3xl font-bold text-center">What People Say</h2>
                <div class="grid md:grid-cols-2 gap-6">
                    <% for (let i=1; i <=2; i++) { %>
                        <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-6">
                            <p class="italic text-gray-700 dark:text-gray-300 mb-2">
                                “Mahen is amazing! Project <%= i %> delivered beyond expectations.”
                            </p>
                            <p class="text-sm font-semibold text-indigo-500 dark:text-indigo-300">— Client <%= i %>
                            </p>
                        </div>
                        <% } %>
                </div>
            </section>

            <!-- CONTACT SECTION -->
            <section id="contact" class="text-center space-y-4" data-aos="fade-up" data-aos-delay="300">
                <h2 class="text-3xl font-bold">Contact</h2>
                <p class="text-gray-600 dark:text-gray-400">Get in touch for collaboration or freelance work.</p>
                <form action="/contact" method="POST" class="max-w-md mx-auto space-y-4">
                    <input type="text" name="name" placeholder="Your Name"
                        class="w-full px-4 py-2 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600"
                        required />
                    <input type="email" name="email" placeholder="Your Email"
                        class="w-full px-4 py-2 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600"
                        required />
                    <textarea name="message" placeholder="Your Message" rows="4"
                        class="w-full px-4 py-2 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600"
                        required></textarea>
                    <button type="submit"
                        class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition-all">
                        Send Message
                    </button>
                </form>
            </section>

        </main>

        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script>AOS.init();</script>
</body>

</html>